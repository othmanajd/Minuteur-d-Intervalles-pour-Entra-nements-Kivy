FloatLayout:
    canvas.before:
        Color:
            rgb: 1, 1, 1  # Couleur de fond de l'ensemble de la fenêtre
        Rectangle:
            source: 'k.png'  # Image de fond
            size: self.size  # Taille de l'image correspondant à la taille de la fenêtre
            pos: self.pos  # Position de l'image

    ActionBar:
        pos_hint: {'top': 1}  # Positionne l'ActionBar en haut de la page
        ActionView:
            use_separator: True
            ActionPrevious:
                title: ''
                on_press: app.exerciceListe()
            ActionButton:
                text: "Exercices"
                on_press: app.exerciceListe()
            ActionButton:
                text: "Ajoutre Execice"
            ActionButton:
                text: "Supprimer Execice"
                on_press: app.supprimerExercice()

    Label:
        text:'Ajouter un execice '
        color: 0, 0, 0, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        font_size:40

    Label:
        text:'Entrer nom d exercice:'
        color: 20, 3, 255, 1
        pos_hint: {'center_x': 0.27, 'center_y': 0.69}
        font_size:30

    TextInput:
        id: nom_input
        hint_text: "Nom..."
        size_hint: (0.9, 0.08)
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        background_color: 0, 0, 0, 0
        font_size:35
        multiline:False
        color: 2, 124, 180, 1

    Label:
        text:'Le temp de exercice (secondes) :'
        pos_hint: {'center_x': 0.4, 'center_y': 0.49}
        font_size:35
        color: 20, 3, 255, 1

    TextInput:
        id: nbrexo_input
        hint_text: "Temps d exercices..."
        size_hint: (0.9, 0.08)
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        background_color: 0, 0, 0, 0
        font_size:30
        color: 50, 250, 253, 1
        multiline:False
    Label:
        text:'Le temps pour se reposer (secondes) :'
        pos_hint: {'center_x': 0.45, 'center_y': 0.29}
        font_size:35
        color: 20, 3, 255, 1

    TextInput:
        id: repo_input
        hint_text: "Nomber en secondes..."
        size_hint: (0.9, 0.08)
        pos_hint: {'center_x': 0.5, 'center_y': 0.20}
        background_color: 0, 0, 0, 0
        font_size:30
        color: 20, 3, 255, 1
        multiline:False   

    Button:
        text: "Ajouter"
        size_hint: (0.3, 0.1)
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        on_press: app.ajouterExercicebd(nom_input.text, nbrexo_input.text,repo_input.text)  # Appeler la fonction de connexion lorsque le bouton est pressé
        background_color: 0, 0, 0, 0  # Transparent
        font_size:32
        color: 0, 0, 70 , 1
        border: (2, 2, 2, 2)  # Définit la taille de la bordure (haut, droite, bas, gauche)
        border_radius: [10]  # Définit le rayon de la bordure pour créer des coins arrondis
    Label:
        id: error_label
        text: ""
        color: 1, 0, 0, 1  # Couleur rouge pour le message d'erreur
        pos_hint: {'center_x': 0.5, 'center_y': 0.15}
    
